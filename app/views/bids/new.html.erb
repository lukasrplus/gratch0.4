<body>

<div class="container">

  <%= render 'nav' %>

  <div class="container">

    <div class="gratch">

      <div class="row gratch_application">

        <div class="myfriends_list">

          <h2>Please choose your friends.</h2>

          <p> <span style="font-size: 7px">Your friends have to be on Gratch to be listed here (say THX to Facebook...)</span></p>

                <% if current_user %>

                  <% collection_of_friends = current_user.facebook_friends_collection %>
                  <% collection_of_friends.each do |c| %>

                  <div class="gratch_card">

                      <label for="<%= c['id'] %>">
                        <div class="row gratch_preview">
                          <div class="col-xs-4 card_picture">
                            <img src="http://graph.facebook.com/<%= c['id'] %>/picture" class="img img-circle" width="70px" height="70px">
                          </div>
                          <div class="col-xs-4 card_details friends_list">
                            <h4>FRIEND</h4>
                            <h3 style="color: #2c3e50"><%= c['name'] %></h3>
                          </div>
                          <div class="col-xs-4">
                          <!-- HERE COMES THE SELECT TAG -->
                          </div>
                        </div>
                      </label>

                   </div>

                  <% end %>

                <% end %>

        </div>

      </div>


    </div>
  </div>

</div>

</body>
