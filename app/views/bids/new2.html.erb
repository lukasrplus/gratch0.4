<body>

<div class="container">

  <%= render 'nav' %>

  <div class="container">

    <div class="gratch">

      <div class="row gratch_application">

        <div class="myfriends_list">

          <h2>Please choose your friends.</h2>

          <p> <span style="font-size: 7px">Your friends have to be on Gratch to be listed here (say THX to Facebook...)</span></p>



                  <%= form_for @bid do |f| %>

                  <% collection_of_friends = current_user.facebook_friends_collection %>


                  <div class="gratch_card">

                  <% collection_of_friends.each do |c| %>



                      <label for="id">
                        <div class="row gratch_preview">
                          <div class="col-xs-4 card_picture">
                            <img src="http://graph.facebook.com/v2.1/<%= c['id'] %>/picture?height=300&width=300" class="img img-circle" width="70px" height="70px">
                          </div>
                          <div class="col-xs-5 card_details friends_list">
                            <h4>FRIEND</h4>
                            <h3 style="color: #2c3e50"><%= c['name'] %></h3>
                          </div>
                          <div class="col-xs-3">
                            <div class="roundedTwo">
                              <%= f.check_box :id, {:multiple => true}, c['id'], nil   %>
                            </div>
                          </div>
                        </div>

                        <div class="row gratch_preview">
                          <div class="col-xs-4">
                          </div>
                          <div class="col-xs-5 card_details friends_list">
                            <h4>Is <%= c['name'] %> SINGLE?</h4>
                          </div>
                          <div class="col-xs-3">
                            <div class="roundedTwo">
                              <%= f.hidden_field :single, {:multiple => true, :value => 'fut'} %>
                              <%= f.check_box :single, {:multiple => true, :class => "single_check", checked: true} %>
                            </div>
                          </div>
                        </div>

                      </label>



                  <% end %>
                  <!-- END OF FORMTAG -->
                  <h4 style="text-align: center; margin-bottom: 10px">Leave a sweet message to increase your chances.</h4>
                  <%= f.text_area :message, {:class => 'form-control', :placeholder => 'Hey, you guys are cute...'} %>
                  <%= f.hidden_field :gratch_id, :value => @gratch.id %>
                  <%= submit_tag 'Send your Gratch request', :class => 'btn btn-primary' %>

                  <div class="container">
                  <p> <span class="extra_info"><strong><%= @host.name %></strong> will be notified by your request through email. Only your names and your message will be transferred. If you host welcomes you and your friends, you will receive a notifaction including the adress details through email. <br> <strong>HAVE A NICE GRATCH!</strong></span></p>
                  </div>

                  <% end %>

                   </div>
                   <!-- END OF DO LOOP -->

            <!--  -->
                  <!-- END OF IF STATEMENT -->


        </div>

      </div>


    </div>
  </div>

</div>

</body>
